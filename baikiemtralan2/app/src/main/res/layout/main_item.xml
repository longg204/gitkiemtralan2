<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/border">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/truoctenkhochoc"
            android:text="Tên khoa học:"
            android:layout_toRightOf="@id/img1"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tenkhoahoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/truoctenkhochoc"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/truoctenthuonggoi"
            android:text="Tên thường gọi:"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/tenkhoahoc"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tenthuonggoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenkhoahoc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/truoctenthuonggoi"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/truocdactinh"
            android:text="Đặc tính:"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/tenthuonggoi"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/dactinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenthuonggoi"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/truocdactinh"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/truoccongdung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dactinh"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="Công dụng:"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/congdung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dactinh"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/truoccongdung"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/truoclieudung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/congdung"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="Liều dùng:"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/lieudung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/congdung"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/truoclieudung"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/truocluuydung"
            android:text="Lưu ý dùng:"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/lieudung"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/luuydung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lieudung"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/truocluuydung"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/luuydung"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Delete"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>